@page
@model Mock_Project_Group9.Pages.UserDetails.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.UserDetails.UserName's Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="UserDetails.UserId" class="control-label"></label>
                <input asp-for="UserDetails.UserId" class="form-control" readonly />
                <span asp-validation-for="UserDetails.UserId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserDetails.UserDetailsId" class="control-label"></label>
                <input asp-for="UserDetails.UserDetailsId" class="form-control" readonly />
                <span asp-validation-for="UserDetails.UserDetailsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDetails.UserName" class="control-label"></label>
                <input asp-for="UserDetails.UserName" class="form-control" readonly/>
                <span asp-validation-for="UserDetails.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDetails.Address" class="control-label"></label>
                <input asp-for="UserDetails.Address" class="form-control" />
                <span asp-validation-for="UserDetails.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDetails.Phone" class="control-label"></label>
                <input asp-for="UserDetails.Phone" class="form-control" />
                <span asp-validation-for="UserDetails.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDetails.Status" class="control-label"></label>
                <input asp-for="UserDetails.Status" class="form-control" />
                <span asp-validation-for="UserDetails.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="link-warning link-offset-2 link-underline link-underline-opacity-0"
       asp-page="../Users/Details" asp-route-id="@Model._id">
       Back to User
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
